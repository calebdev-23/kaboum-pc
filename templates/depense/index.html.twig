{% extends 'base.html.twig' %}

{% block title %}Dépense{% endblock %}

{% block body %}
    <section class="depenses">
        <div class="container">
            <div class="d-flex align-items-center">
                <h2>Dépense </h2>
                <a href="{{ path('app_new_depense') }}" class="btn btn-danger btn-sm  mx-3">Ajouter</a>
            </div>
            <div class="text-end">
                <a href="{{ path('app_depense_today') }}" class="btn btn-primary btn-sm">Dépense du jour</a>
            </div>
             {{ form_start(form, { 'attr' : { class : 'd-flex align-items-center justify-content-center' }}) }}
                        {{ form_row(form.date, { 'attr' : { class : 'mb-0' }}) }}
                        <button type="submit" class="btn btn-success btn-sm mb-3 mx-3">Filtrer</button>
             {{ form_end(form) }}

             {% set totale = null %}
            {% if depense|length == 0 %}
                <div class="alert alert-danger text-center" role="alert">
                    Aucun dépense aujourd'hui
                </div>
                {% else %}
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th scope="col" class="">{{ knp_pagination_sortable(depense, 'Date', 'date') }}</th>
                            <th scope="col">Designation</th>
                            <th scope="col">Dépense</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for dep in depense %}
                            <tr>
                                <td>{{ dep.date|date('d-m-Y') }}</td>
                                <td>{{ dep.designation }}</td>
                                <td>{{ dep.depense|number_format(0,',','.') }} AR</td>
                                <td>
                                    <a href="{{ path('app_edit_depense', { id : dep.id}) }}" class="mx-3"><img src="{{ asset('img/pencil.svg') }}" alt=""></a>
                                    <a href="{{ path('app_delete_depense', { id : dep.id}) }}"><img src="{{ asset('img/trash.svg') }}" alt=""></a>
                                </td>
                            </tr>
                            {% set totale = totale + dep.depense %}
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="depense">
                        dépense totale :  {{ totale|number_format(0,',','.') }} Ar
                    </div>
            {% endif %}
        </div>
    </section>
{% endblock %}
