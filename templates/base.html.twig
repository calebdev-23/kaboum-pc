<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Kaboum-{% block title %}{% endblock %}</title>
        <link rel="icon" href="{{ asset('logo.jpg') }}" class="rounded-5">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        <style>
            .photo_profil {

            }
            .police{
                font-family: "Centaur", sans-serif;
                font-size: 25px;
                margin-left: 15px;
            }
          .admin  a{
               text-decoration: none;
            }
        .panier .badge{
              color: #00ff33;
              position: relative;
              top: -12px;
              background-color: #0d6efd;

          }
            .offcanvas-body li a{
                font-size: 20px;
            }
        </style>
    </head>
    <body>
    <nav class="navbar navbar-dark bg-dark fixed-top ">
        <div class="container-fluid d-flex align-items-center">
            <a class="navbar-brand police me-auto" href="{{ path('app_product') }}" ><img src="{{ asset('logo.jpg') }}" alt="logo" class="rounded-circle mylogo"> KABOUM-PC</a>


            <a type="button" class="btn btn-primary position-relative mx-3" href="{{ path('app_recette_today') }}">
                <img src="{{ asset('img/cart.svg') }}" alt="cart">
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    {{ recette.getRecetteToDay }}
                    <span class="visually-hidden">unread messages</span>
                    </span>
            </a>

            <button class="navbar-toggler " type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Menu</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item  admin text-center">
                                <a href="/admin" ><img src="{{ asset('logo.jpg') }}" alt="photo de profil" class="photo_profil rounded-circle w-50 mb-3"> </a>
                            </li>
                            {% else %}
                                <li class="nav-item  admin text-center">
                                    <a href="{{ path('app_product') }}" ><img src="{{ asset('logo.jpg') }}" alt="photo de profil" class="photo_profil rounded-circle w-50 mb-3"> </a>
                                </li>
                        {% endif %}
                        <li class="nav-item text-center ">
                            <a class="nav-link" aria-current="page" href="{{ path('app_product') }}">Produits</a>
                        </li>
                        <li class="nav-item text-center ">
                            <a class="nav-link" aria-current="page" href="{{ path('app_recette') }}">Recette</a>
                        </li>

                        <li class="nav-item text-center ">
                            <a class="nav-link" aria-current="page" href="{{ path('app_depense') }}">Dépense</a>
                        </li>
                           {#
                           <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="{{ path('app_home') }}">Home</a>
                            </li>
                           #}

                        {% if app.user %}
                            <li class="nav-item  btn btn-danger btn-sm">
                                <a class="nav-link" aria-current="page" href="{{ path('app_logout') }}">Déconnecté</a>
                            </li>
                            {% else %}
                                <li class="nav-item btn btn-success btn-sm">
                                    <a class="nav-link" aria-current="page" href="{{ path('app_login') }}">Connexion</a>
                                </li>
                               {#
                               <li class="nav-item">
                                    <a class="nav-link" aria-current="page" href="{{ path('app_register') }}">S'inscrire</a>
                                </li>
                               #}
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <div class="margin">
        {% block body %}{% endblock %}
    </div>
    </body>
</html>
